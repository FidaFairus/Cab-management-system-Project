<h1 class="text-center">Routes</h1>
<div class="container">
    <a href="/create-routes" class="btn btn-primary">+ New Route</a>
    <table class="table table-striped mt-4" id="example">
        <tr>
            <th>Id</th>
            <th>pickupPoint</th>
            <th>destination</th>
            <th>Amount</th>
            
        </tr>
        {{#each data}}
        <tr>
            <td>{{this.dataValues.amountId}}</td>
            <td>{{this.dataValues.pickupPoint}}</td>
            <td>{{this.dataValues.destination}}</td>
            <td>{{this.dataValues.amount}}</td>
            
            <td>
                <a href="/update-routes/{{this.dataValues.amountId}}">Edit</a> |
                <a href="/delete-routes/{{this.dataValues.amountId}}" class="text-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
