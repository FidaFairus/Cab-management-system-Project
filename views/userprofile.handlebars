                    </tr>
                    <tr>
                        <td for="Username" style="width:145px">Username:</label></td>
                        <td  type="text" id="Username" name="Username" style="border:solid;border-radius: 10px;width:250px; height:35px;text-align: center;margin-top: 20px;">{{data.Username}}</td>
                    </tr>
                        <td><a href="/updateuser/{{data.id}}">Edit</a></td>
                        <td><a href="/delete/{{data.id}}" class="text-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a></td>
